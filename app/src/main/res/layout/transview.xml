<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/daybackground"
        android:elevation="1dp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/particular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/details_particular"
        android:drawablePadding="5dp"
        android:padding="4dp"
        android:textColor="#dadada"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:drawableStartCompat="@drawable/ic_baseline_storefront_24_details" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/details_amt"
        android:drawablePadding="5dp"
        android:padding="4dp"
        android:textColor="#dadada"
        android:textSize="18sp"
        app:drawableStartCompat="@drawable/minus" />

</LinearLayout>